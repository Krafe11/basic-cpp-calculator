#include <iostream>

using namespace std;


int main()
{
    double num, num2;
    char oper;

    cout << "Enter a number: ";
    cin >> num;

    cout << "Enter an operator: ";
    cin >> oper;

    cout << "Enter a second number: ";
    cin >> num2;
    int answer;

    if(oper == '+'){
        answer = num + num2;
    } else if(oper == '-'){
        answer = num - num2;
    } else if(oper == '*'){
        answer = num * num2;
    } else if(oper == '/'){
        answer = num / num2;
    } else{
        cout << "Operator does not exist.";
    }
    cout << " The answer is: " << answer;


    return 0;
}
